 
<div class="list-of-pts">
<% @pts.each do |pt| %></p>
  <p><%= link_to pt.name, pt_path(pt) %>
<% end %>
</div>

<p class="add-pt"><%= link_to 'Add Pt', new_pt_path(@pt) %></p>
 <div class="search-for-pt">
<p><%= search_form_for @search do |f| %>
  <% Skill.all.uniq.each do |skill| %>
    <%= check_box_tag('q[skills_name_cont_any][]', skill.name) %>
    <%= skill.name %>
  <% end %>
  <%= f.submit "Search"%>
<% end %>
  </p>

<p><%= search_form_for @search do |f| %>
  <% Location.all.uniq.each do |location| %>
    <%= check_box_tag('q[locations_name_cont_any][]', location.name) %>
    <%= location.name %>
  <% end %>
  <%= f.submit "Search"%>
<% end %>
</p>





  