<h1>This is show page</h1>

<h1 class="pt-name"><%= @pt.name %></h1>
<div class ="pt-details">
<p>Profile: </p>
<p> <%= @pt.profile%></p>
<p>Email: </p>
<p>  <%= @pt.email %></p>
<p>Phone: </p>
<p> <%= @pt.phone %></p>
</div>

<div class="pt-skills">
<% @pt.skills.each do |skill| %>
<%= skill.name %>
<% end %>
</div>

<div class="star-rating">
  <%= rating_for @pt, "price", :star => 8%>
  <%= rating_for @pt, "effectiveness", :half_show => true%>
  <%= rating_for @pt, "knowledge", :enable_half => true, :half_show => true%>
</div>

<p class="add-review"><%= link_to 'Add review', new_pt_review_path(@pt) %></p>

<p><% @pt.reviews.each do | review| %>
<p class="review-title"><%= review.title %></p>
<p><%= review.content %></p>
<% end %></p>

