

<h1 class="pt-name"><%= @pt.name %></h1>
<div class ="pt-details">
<p>Profile: </p>
<p> <%= @pt.profile%></p>
<p>Email: </p>
<p>  <%= @pt.email %></p>
<p>Phone: </p>
<p> <%= @pt.phone %></p>
</div>

<div class="pt-skills">
  <h2>Skills  </h2>
     <% @pt.skills.each do |skill| %>
  <li><%= skill.name %></li>
  <% end %>
</div>

<div class="star-rating">
   Price<%= rating_for @pt, "price", :star => 8%>
   Effectiveness<%= rating_for @pt, "effectiveness", :half_show => true%>
  knowledge<%= rating_for @pt, "knowledge", :enable_half => true, :half_show => true%>
</div>


<div class="reviews">
  <h2>Reviews</h2>
  <p><% @pt.reviews.each do | review| %>
  <p class="review-title"><%= review.title %></p>
  <p><%= review.content %></p>
  <% end %></p>

<p class="book-pt"><%= link_to 'Book PT', new_resource_path(@pt) %></p>

<p class="add-review"><%= link_to 'Add review', new_pt_review_path(@pt) %></p>


